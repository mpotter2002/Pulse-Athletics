<% if (allrecs.length > 0) {%>
    <table>
    <tr>
        <th>Promotion ID</th>
        <th>Customer ID</th>
        <th>Product ID</th>
        <th>Rating</th>
        <th>Review Date</th>
        <th>Review Text</th>
        <th colspan="3">Actions</th>
    </tr>

    <% allrecs.forEach((recref, index) => { %>
    <tr>
        <td><%= recref.review_id %></td>
        <td><%= recref.customer_id %></td>
        <td><%= recref.product_id %></td>
        <td><%= recref.rating %></td>
        <td><%= recref.review_date %></td>
        <td><%= recref.review_text %></td>
        <td><a href='/reviews/<%= recref.review_id %>/show'>Details</a></td>
        <td><a href='/reviews/<%= recref.review_id %>/edit'>Edit</a></td>
        <td><a href='/reviews/<%= recref.review_id %>/delete' onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
    </tr>
    <% }); %>
    </table>
    <% } else { %>
        <p>No Records Available</p>
    <% } %>
    <p> <a href='/reviews/addrecord'>Add New</a> </p>
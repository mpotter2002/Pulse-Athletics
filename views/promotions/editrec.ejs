<h1> Edit Promotion</h1>
<form action="/promotions/save" method="post">
<input type="hidden" name="promotion_id" value="<%= onerec.promotion_id %>" >
<table>
<tr> <td> Promotion Name: </td> <td> <input type="text" name="promotion_name" value="<%= onerec.promotion_name %>"
required> </td> </tr>
<tr> <td> Description: </td> <td> <input type="text" name="description" value="<%= onerec.description %>" required> </td>
</tr>
<tr> <td> Discount: </td> <td> <textarea name="discount" rows="10" cols="30"><%= onerec.discount
%></textarea> </td> </tr>
<tr> <td> Start Date: </td> <td> <input type="date" name="start_date" value="<%= onerec.start_date %>" required> </td> </tr>
<tr> <td> End Date: </td> <td> <input type="date" name="end_date" value="<%= onerec.end_date %>" required> </td> </tr>
<tr> <td> Product ID: </td> <td> <input type="text" name="product_id" value="<%= onerec.product_id %>" required> </td> </tr>
</table>
<button type="submit">Save</button>
</form>

<% if (allrecs.length > 0) {%>
    <table>
    <tr>
        <th>Promotion ID</th>
        <th>Promotion Name</th>
        <th>Description</th>
        <th>Discount</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Product ID</th>
        <th colspan="3">Actions</th>
    </tr>

    <% allrecs.forEach((recref, index) => { %>
    <tr>
        <td><%= recref.promotion_id %></td>
        <td><%= recref.promotion_name %></td>
        <td><%= recref.description %></td>
        <td><%= recref.discount %></td>
        <td><%= recref.start_date %></td>
        <td><%= recref.end_date %></td>
        <td><%= recref.product_id %></td>
        <td><a href='/promotions/<%= recref.promotion_id %>/show'>Details</a></td>
        <td><a href='/promotions/<%= recref.promotion_id %>/edit'>Edit</a></td>
        <td><a href='/promotions/<%= recref.promotion_id %>/delete' onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
    </tr>
    <% }); %>
    </table>
    <% } else { %>
        <p>No Records Available</p>
    <% } %>
    <p> <a href='/promotions/addrecord'>Add New</a> </p>
    

    
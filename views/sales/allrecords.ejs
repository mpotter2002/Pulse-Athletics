<% if (allrecs.length > 0) {%>
    <table>
    <tr>
        <th>Sale ID</th>
        <th>Customer ID</th>
        <th>Product ID</th>
        <th>Sale Date</th>
        <th>Quantity</th>
        <th>Total Price</th>
        <th colspan="3">Actions</th>
    </tr>

    <% allrecs.forEach((recref, index) => { %>
    <tr>
        <td><%= recref.sale_id %></td>
        <td><%= recref.customer_id %></td>
        <td><%= recref.product_id %></td>
        <td><%= recref.sale_date %></td>
        <td><%= recref.quantity %></td>
        <td><%= recref.total_price %></td>
        <td><a href='/sales/<%= recref.sale_id %>/show'>Details</a></td>
        <td><a href='/sales/<%= recref.sale_id %>/edit'>Edit</a></td>
        <td><a href='/sales/<%= recref.sale_id %>/delete' onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
    </tr>
    <% }); %>
    </table>
    <% } else { %>
        <p>No Records Available</p>
    <% } %>
    <p> <a href='/sales/addrecord'>Add New</a> </p>
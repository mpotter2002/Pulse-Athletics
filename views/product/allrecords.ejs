<% if (allrecs.length > 0) {%>
    <table>
    <tr>
        <th>Product ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>Category</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Image URL</th>
        <th colspan="3">Actions</th>
    </tr>

    <% allrecs.forEach((recref, index) => { %>
    <tr>
    <td><%= recref.product_id %></td>
    <td><%= recref.name %></td>
    <td><%= recref.description %></td>
    <td><%= recref.category %></td>
    <td><%= recref.price %></td>
    <td><%= recref.stock %></td>
    <td><%= recref.product_images %></td>
    <td><a href='/product/<%= recref.product_id %>/show'>
    Details</a></td>
    <td><a href='/product/<%= recref.product_id%>/edit'>Edit</a></td>
    <td><a href='/product/<%= recref.product_id %>/delete' onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
    </tr>
    <% }); %>
    </table>
    <% } else { %>
        <p>Not Records Available</p>
    <% } %>
    <p> <a href='/product/addrecord'>Add New</a> </p>
    

    